<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
        <function name="write" model="ir.model.data">
            <function name="search" model="ir.model.data">
                <value eval="[('module', '=', 'website'), ('name', 'in', ['homepage'])]" />
            </function>
            <value eval="{'noupdate': False}" />
        </function>

		<template name="Homepage" priority="29" t-name="website.homepage">
			<t t-call="website.layout">
				<div class="oe_structure oe_empty page-homepage" id="page-home">
                    <!-- Block: Intro -->
                    <div class="block" id="block-home-intro">
                        <div class="subblock subblock-image" id="subblock-home-intro">
                            <div class="container container-md">
                                <div class="floating-object">
                                    <h1 class="header">
                                        Cloud Software <br />
                                        for Manufacturers
                                    </h1>
                                    <div class="divider" />
                                    <div class="body">
                                        The Simplest &amp; Cheapest Way to Improve Productivity &amp; Profits
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div><!-- // Block: Intro -->
                </div>
            </t>
        </template>
    </data>
</openerp>